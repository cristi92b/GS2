<h1>Home</h1>

<hr>
<div>
	<%= form_tag("/home/find", method: "get") do %>
		<%= label_tag(:q, "Search for:") %>
		<%= text_field_tag(:word) %>
		<%= submit_tag "Find" %>
	<% end %>


</div>

<hr>

<table class="table table-hover">
	<tr>

		<td><b>
		        Title
		</b>
		</td>
		
		<td><b>
			Album
		</b>
		</td>
		
		<td><b>
			Artist
		</b>
		</td>
		
		<td><b>
			Genre
		</b>
		</td>
		
		<td><b>
			Track
		
		<td><b>
			Year
		</b>
		</td>
		
		<td></td>
		
		
		


	</tr>
<% @songs.each do |song| %>
	<tr>
		<td>
			<%= song.title %>
		</td>
		<td>
			<%= song.album %>
		</td>
		<td>
			<%= song.artist %>
		</td>
		<td>
			<%= song.genre %>
		</td>
		<td>
			<%= song.track %>
		</td>
		<td>
			<%= song.year %>
		</td>
		<td>
			<%= link_to "Play", dashboard_path(song.id) %>
		</td>
		
		
	</tr>
<% end %>
</table>










